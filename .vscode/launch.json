    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Api Server",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "hideSystemGoroutines": true,
            "showGlobalVariables": true,
            "args": [
                "-c=./config.yml",
                "-use-debug=true",
            ],
            "buildFlags": [
                "--tags=fts5 jsoniter",
            ],
            "program": "${workspaceFolder}/space-api/main.go"
        },
        {
            "name": "Debug Current File",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "hideSystemGoroutines": false,
            "showGlobalVariables": true,
            "program": "${file}"
        }
    ]
}
